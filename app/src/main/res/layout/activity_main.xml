                android:layout_alignParentTop="true"
                android:text="@string/divide_sign"
                android:background="@color/colorOrange"
                android:layout_margin="1dip"
                android:textSize="29sp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
