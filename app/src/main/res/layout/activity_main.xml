                android:text="@string/radical_sign"
                android:background="@color/colorBlue"
                android:layout_margin="1dip"
                android:textSize="27sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="102.85dp"
            android:layout_height="match_parent">
